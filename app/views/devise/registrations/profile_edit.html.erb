<div class="container-fluid user bg-light w-100 h-100">
<div class="row w-100 h-100">
  <div class="user-nav col-2 bg-white h-100">
    <ul>
      <li><%= link_to"アカウント",users_account_path %></li>
      <li><%= link_to"プロフィール",profile_edit_path %></li>
    </ul>
  </div>
  <div class="user-view col-10 bg-light h-100">
    <div class="user-view-box">
      <div class="update-content">
        <div class="row">
          <h5>プロフィール</h5>
        </div>
      </div>
       <%= form_for @user,url: {action: 'profile_update'} do |f| %>
      <div class="update_content">
        <div class="row">
          <div class="user_icon">
            <% if @user.user_image? %>
              <%= image_tag @user.user_image.to_s %>
            <% else %>
              <%= image_tag "default_icon.png" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="update-content">
        <div class="row">
          <%= f.label:user_image, "アイコン画像", class: "col-3" %>
          <%= f.file_field:user_image, class: "col-9" %>
        </div>
      </div>
      <div class="update-content">
        <div class="row">
          <%= f.label :user_name,"名前",class: "col-3" %>
          <%= f.text_field:user_name, placeholder: "名前を入力", class: "col-9" %>
        </div>
      </div>
      <div class="update-content">
        <div class="row">
          <%= f.label:user_introduction,"自己紹介", class: "col-3" %>
          <%= f.text_area:user_introduction, rows: "5",placeholder: "自己紹介を入力", class: "col-9" %> 
        </div>
      </div>
      <div class="update-content">
        <div class="row">
          <%= f.submit "更新",class: "btn btn-primary col-2 ml-3" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>  
</div>
