<div class="container">
  <h2>登録済ルーム一覧</h2>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
      </tr>
    </thead>
    
    <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= image_tag room.room_image.to_s,class: "room-image" %></td>
        <td class="room-name"><%= link_to"#{room.room_name}", room %></td>
        <td><%= room.room_introduction %></td>
        <td>¥<%= room.room_price %></td>
        <td><%= room.created_at.to_s(:datetime_jp) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
