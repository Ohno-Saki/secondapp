<div class="container reservation-new">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="reservation-new-nav border p-4">
        <h4 class="pb-3 mb-3 border-bottom">予約内容確認</h4>
        <h5 class="price-icon mt-3">¥<%= @room.room_price %>/日</h5>
        <div class="reservation-new-date-select p-2">
        <form>
          <fieldset disabled>
            <div class="form-group">
              <label>開始日</label>
              <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= @reservation.start_day %>">
            </div>
            <div class="form-group">
              <label>終了日</label>
              <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= @reservation.finish_day %>">
            </div>
          <h6 class="pb-4 mb-4 border-bottom">使用日数：<%= @reservation.date %>日</h6>
          <h6 class="pb-4 mb-4 border-bottom">人数：<%= @reservation.number_of_people %>人</h6>
          <div class="form-group">
              <label>合計金額</label>
              <input type="text" id="disabledTextInput" class="form-control" placeholder="<%= @room.room_price * @reservation.date_num %>">
            </div>
          <p class="reservation-new-check-content pb-4 mb-4 border-bottom">上記内容でよろしければ「予約を確定」を押してください</p>
          </fieldset>
        </form>
        
          <%= form_for @reservation do |f| %>
          　<%= f.hidden_field :room_id, value: @room.id %>
            <%= f.hidden_field :start_day, class: "d-none" %>
            <%= f.hidden_field :finish_day %>
            <%= f.hidden_field :number_of_people %>
            <%= f.hidden_field :total_amount, value: @room.room_price * @reservation.date_num %>
            
            <%= f.submit"予約を確定",class: "btn btn-primary  btn-block" %>
            <%= link_to 'ルーム詳細に戻る', room_path, class: "btn btn-outline-primary text-blue  btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
